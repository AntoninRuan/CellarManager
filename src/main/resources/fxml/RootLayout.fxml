<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="1080.0" maxWidth="1920.0" prefHeight="750.0" prefWidth="1300.0" style="-fx-background-color: #264653;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.womax.cavemanager.view.RootLayoutController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Fichier">
            <items>
                  <MenuItem mnemonicParsing="false" text="Importer" />
                  <MenuItem mnemonicParsing="false" text="Exporter" />
                  <SeparatorMenuItem mnemonicParsing="false" />
              <MenuItem mnemonicParsing="false" onAction="#handleClose" text="Fermer" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Edition">
              <items>
                  <MenuItem mnemonicParsing="false" onAction="#handleOpenBottleList" text="Bouteille" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" onAction="#handleDeleteCompartement" text="Supprimer l'étagère" />
              </items>
            </Menu>
          <Menu mnemonicParsing="false" text="A propos">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleCheckUpdate" text="Recherche de mise à jour" />
                  <MenuItem fx:id="versionMenuItem" mnemonicParsing="false" text="Version: " />
            </items>
          </Menu>
        </menus>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </MenuBar>
   </top>
   <right>
      <StackPane BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="438.0" fitWidth="518.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../img/wine_bottle.png" />
               </image>
            </ImageView>
            <VBox alignment="CENTER" spacing="10.0">
               <children>
                  <HBox spacing="15.0">
                     <children>
                        <HBox alignment="CENTER_LEFT" prefWidth="341.0" style="-fx-border-color: #2a9d8f; -fx-border-radius: 5px; -fx-border-width: 5px;" HBox.hgrow="ALWAYS">
                           <children>
                              <TextField fx:id="searchField" prefHeight="30.0" prefWidth="329.0" promptText="Recherche par..." style="-fx-background-radius: 0px;" HBox.hgrow="ALWAYS" />
                              <ChoiceBox fx:id="criteriaChoiceBox" prefHeight="29.0" prefWidth="201.0" style="-fx-border-width: 0px; -fx-border-radius: 0px; -fx-background-radius: 0px;" translateY="-1.0" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER">
                           <children>
                              <Button mnemonicParsing="false" onAction="#handleNewCompartement" style="-fx-background-color: #264653; -fx-border-color: #2a9d8f; -fx-border-width: 5px; -fx-border-radius: 5px;" translateY="-1.0">
                                 <graphic>
                                    <ImageView fitHeight="20.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../img/plus.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor></Button>
                           </children>
                        </HBox>
                     </children>
                  </HBox>
                  <TitledPane fx:id="descriptionPane" expanded="false">
                     <content>
                        <TextArea fx:id="description" editable="false" prefHeight="273.0" prefWidth="400.0" wrapText="true">
                           <font>
                              <Font size="18.0" />
                           </font></TextArea>
                     </content>
                  </TitledPane>
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
               <StackPane.margin>
                  <Insets right="10.0" />
               </StackPane.margin>
            </VBox>
         </children>
      </StackPane>
   </right>
</BorderPane>
